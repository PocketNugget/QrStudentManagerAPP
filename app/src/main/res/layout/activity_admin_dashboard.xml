<?xml version="1.0" encoding="utf-8"?>

<!--
    Dashboard del Administrador

    Pantalla principal para usuarios con rol de administrador.
    Permite cambiar el tipo de usuario (profesor/alumno) y crear nuevas materias,
    asignando profesores y alumnos a ellas.
-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnChangeRole"
            android:text="Cambiar tipo de usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnCreateSubject"
            android:text="Crear nueva materia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
