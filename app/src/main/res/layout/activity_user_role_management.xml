<?xml version="1.0" encoding="utf-8"?>

<!--
    Gestión de Roles de Usuario

    Permite al administrador asignar o cambiar el rol de un usuario
    existente (profesor, alumno o administrador), buscando por correo electrónico.
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/userEmailInput"
        android:hint="Correo del usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/roleSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnAssignRole"
        android:text="Asignar Rol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>
